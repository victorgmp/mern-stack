{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {},
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "test"],
  "typeRoots": ["node_modules/@types"]
}
